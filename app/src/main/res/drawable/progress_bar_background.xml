<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background" android:gravity="center">
        <shape>
            <gradient android:startColor="#21ffF3"
                android:centerColor="#21ffF3"
                android:centerY="1.0"
                android:endColor="#21ffF3"
                android:angle="45"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#2196F3"
                    android:centerColor="#0f44ff"
                    android:centerY="1.0"
                    android:endColor="#0900aa">
                </gradient>
            </shape>
        </clip>
    </item>


</layer-list>